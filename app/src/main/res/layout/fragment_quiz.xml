<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="5" >
    <TextView
        android:id="@+id/idTextViewPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="Период 1990-1999"/>


    <ImageView
        android:id="@+id/idImageMainQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:src="@drawable/screenshot" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/idButtonAnswer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:padding="3dp"
        android:textSize="13sp"
        app:cornerRadius="10dp"
        android:maxLines="2"
        android:text="Title"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/idButtonAnswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:padding="3dp"
        android:textSize="13sp"
        app:cornerRadius="10dp"
        android:maxLines="2"
        android:text="Title"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/idButtonAnswer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:padding="3dp"
        android:textSize="13sp"
        app:cornerRadius="10dp"
        android:maxLines="2"
        android:text="Title"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/idButtonAnswer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:padding="3dp"
        android:textSize="13sp"
        app:cornerRadius="10dp"
        android:maxLines="2"
        android:text="Title"/>

    <TextView
        android:id="@+id/idTextViewProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="5/10"
        android:textAlignment="center"
        android:textColor="#474747"
        android:textSize="15sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/idButtonAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:padding="5dp"
            android:textSize="20sp"
            android:backgroundTint="@color/purple_200"
            android:text="О тайтле"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/idButtonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_200"
            android:padding="5dp"
            android:text="Далее"
            android:textSize="20sp"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</LinearLayout>
